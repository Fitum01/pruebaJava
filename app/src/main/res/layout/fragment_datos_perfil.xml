<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.DatosPerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtResumenInforme"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="@string/resumenDatosPerfil">
        </TextView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/txtNombrePerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre + Apellido1 + Apellido2"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"/>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TableRow
                android:paddingTop="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txt0Perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dni: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/idtxt0PerfilDNI"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:text="Valor"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TableRow
                android:paddingTop="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txt1Perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexo: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/idtxt1PerfilSexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:text="Valor"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TableRow
                android:paddingTop="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txt2Perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacto: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/idtxt2PerfilContacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:text="Valor"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TableRow
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt3Perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/idtxt3PerfilEmail"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:text="Valor"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TextView
                android:id="@+id/txtListaPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/listaPS"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"/>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TextView
                android:id="@+id/idtxtListaPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:scrollbars="vertical"/>

        </TableLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarPerfil"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

</FrameLayout>