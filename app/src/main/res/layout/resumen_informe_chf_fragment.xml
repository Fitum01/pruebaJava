<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resumenInformes.ResumenInformeCHF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtResumenInforme"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:text="@string/resumenInforme">
        </TextView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <TableRow
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txtT0CHF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Informe: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtTipoInformeRI"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:text="Valor"
                    android:gravity="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TableRow
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txtT1CHF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtPesoRI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:text="Valor"
                    android:gravity="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

            <TableRow
                android:paddingTop="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txtT2CHF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tension (mmHg): "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtTensionRI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:text="Valor"
                    android:gravity="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>


            <TableRow
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt6TCHF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se mando el: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtFechaAltaRI"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:gravity="center"
                    android:text="Valor"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_height="2px"
                android:background="#BDBDBD">
                <TextView
                    android:layout_span="2"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:text="">
                </TextView>
            </TableRow>

        </TableLayout>


    </LinearLayout>

</FrameLayout>